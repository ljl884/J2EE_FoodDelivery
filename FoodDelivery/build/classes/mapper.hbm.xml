<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.fooddelivery.model.User" table="user">
	<id name="id" column="id">
		<generator class="increment"/>
	</id>
	<property name="username" column="username" />
	<property name="password" column="password" />
	<property name="restaurantid" column="restaurantid"/>
	
</class>

<class name="com.fooddelivery.model.Item" table="item">
	<id name="id" column="id">
		<generator class="increment"/>
	</id>
	<property name="name" column="name" />
	<property name="catagory" column="catagory" />
	<property name="price" column="price" />
	<property name="description" column="description" />
	<property name="menuid" column="menuid" />
</class>

<class name="com.fooddelivery.model.Order" table="pendingorder">
	<id name="id" column="id">
		<generator class="increment"/>
	</id>
	<property name="restaurantid" column="restaurantid" />
	<property name="status" column="status" />
	
</class>

<class name="com.fooddelivery.model.MenuItem" table="menuitem">
    <id name="id" column="id">
        <generator class="increment"/>
    </id>
    <property name="menuid" column="menuid"/>
    <property name="itemid" column="itemid"/>        

</class>

<class name="com.fooddelivery.model.Menu" table="menu">
    <id name="id" column="id">
        <generator class="increment"/>
    </id>
    <property name="name" column="name"/>
    <property name="restaurantid" column="restaurantid"/>
</class>

<class name="com.fooddelivery.model.Restaurant" table="restaurant">
    <id name="id" column="id">
        <generator class="increment"/>
    </id>
    <property name="name" column="name"/>
    <property name="category" column="category"/>
    <property name="location" column="location"/>
    <property name="averageprice" column="averageprice"/>
</class>


<class name="com.fooddelivery.model.CustomerInfo" table="customerinfo">
    <id name="id" column="id">
        <generator class="increment"/>
    </id>
    <property name="name" column="name"/>
    <property name="orderid" column="orderid"/>
</class>

<class name="com.fooddelivery.model.DeliverAddress" table="deliveraddress">
    <id name="id" column="id">
        <generator class="increment"/>
    </id>
    <property name="address" column="address"/>
    <property name="orderid" column="orderid"/>
</class>

<class name="com.fooddelivery.model.PaymentMethod" table="paymentmethod">
    <id name="id" column="id">
        <generator class="increment"/>
    </id>
    <property name="method" column="name"/>
    <property name="orderid" column="orderid"/>
</class>

<class name="com.fooddelivery.model.OrderItem" table="orderitem">
    <id name="id" column="id">
        <generator class="increment"/>
    </id>
    <property name="itemid" column="itemid"/>
    <property name="orderid" column="orderid"/>
</class>

</hibernate-mapping>